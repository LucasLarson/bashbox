#!/usr/bin/env bash
rm bashbox
touch bashbox
chmod +x bashbox
echo "#""!"/usr/bin/env bash >> bashbox
echo cmdf="$"1 >> bashbox
echo shift >> bashbox
cd bin
items=$(ls)
help=$(echo *)
cd ..
echo if "[[" a = b "]]"";"" then" >> bashbox #see blow line
echo " "exit >> bashbox #this is just lazy way to fix elif start issue
for i in $items
do
 echo elif "[[" "$"cmdf = $i "]]"";"" then" >> bashbox
 #start of text edit
 filern=bin/$i
 lines=$(cat $filern | wc -l)
 for u in `seq $lines`
 do
  rn="	"$( head -n $u $filern | tail -1)
  cat <<< "$rn" >> "bashbox"
  echo merging line $u in $i
 done
done
echo else >> bashbox
echo " "echo $help  >> bashbox
echo fi >> bashbox
