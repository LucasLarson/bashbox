#!/usr/bin/env bash
#
# cat in pure bash.

if [[ "$#" == 0 ]]; then
    while read -rn1; do echo "$REPLY"; done
else
    for file in "$@"; do
        if [[ -f $file ]]; then
            printf '%s\n' "$(<"$file")"
        else
            printf '%s\n' "cat: $file: No such file or directory" >&2
        fi
    done
fi
