#!/usr/bin/env bash
if [ -z $1 ]; then
 echo $OSTYPE
elif [ $1 = -m ]; then
 printf '%s\n' "${MACHTYPE%%-*}"
elif [ $1 = --old ]; then
 info="${MACHTYPE}"
 os="${info%-*}"
 os="${os##*-}"
 echo $os
elif [ $1 = --type ]; then
 echo $MACHTYPE
elif [ $1 = -a ]; then
 printf '%s\n' "$(<"/proc/version")"
else 
 echo "flags: -m --old --type -a"
fi
